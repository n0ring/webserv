{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file", // должен совпадать с preLaunchTask из launch.json
            "command": "/usr/bin/clang++", // какую команду выполнить (указывается компилятор)
            "args": [ // аргументы для компиляции. 
                "-I",
                "include",
                "-g", // должен быть обязательно
                "-fdiagnostics-color=always", // лучше быть. цвета для ошибок
                "src/*.cpp", 
                "-o", 
                "webserv"
            ],
            "options": {
                "cwd": "${workspaceFolder}" // путь до папки где проект
            },
            "problemMatcher": [
                "$gcc" 
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}